@model AcunMedyaFestavaLive.Entities.User





<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin Giriş Sayfası</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Templates/login-form-v2/Login_v2/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Templates/login-form-v2/Login_v2/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <span class="login100-form-title p-b-26">
                        Hoşgeldin
                    </span>
                    <span class="login100-form-title p-b-48">
                        <i class="zmdi zmdi-font"></i>
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı adı gerekli">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input100", @placeholder = "Email Adresiniz" })
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Şifre gerekli">
                        <span class="btn-show-pass">
                            <i class="zmdi zmdi-eye"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = "Şifre" })
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button type="submit" class="login100-form-btn">
                                Giriş Yap
                            </button>
                        </div>
                    </div>

                    <div class="text-center p-t-115">
                        <span class="txt1">
                            Yetkili Degil misin?
                        </span>

                        <a class="txt2" href="#">
                            Şifremi Unuttum
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Templates/login-form-v2/Login_v2/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Templates/login-form-v2/Login_v2/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Templates/login-form-v2/Login_v2/js/main.js"></script>

</body>
</html>



<p class="text-danger">@ViewBag.Message</p>
