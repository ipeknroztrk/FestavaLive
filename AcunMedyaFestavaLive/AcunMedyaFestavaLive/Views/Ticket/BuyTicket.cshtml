@model AcunMedyaFestavaLive.Entities.UserBuy
@{
    ViewBag.Title = "BuyTicket";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html lang="en">

<body>

    <main>
        <section class="ticket-section section-padding">
            <div class="section-overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-10 mx-auto">
                        <form class="custom-form ticket-form mb-5 mb-lg-0" method="post" role="form">
                            <h2 class="text-center mb-4">Bilet Al </h2>
                            <div class="ticket-form-body">
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        @Html.LabelFor(model => model.NameSurname)
                                        @Html.EditorFor(model => model.NameSurname, new { htmlAttributes = new { @class = "form-control", placeholder = "Adınız Soyadınız", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.NameSurname, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        @Html.LabelFor(model => model.Email)
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email adresiniz", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <input type="tel" class="form-control" name="ticket-form-phone"
                                       placeholder="Telefon Numaranız">


                                <h6>Bilet Türünü Seçiniz </h6>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.TicketId, 1, new { @class = "form-check-input", id = "flexRadioDefault1" })
                                            @Html.Label("Kombine Bilet 1600₺", new { @class = "form-check-label" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.TicketId, 2, new { @class = "form-check-input", id = "flexRadioDefault2" })
                                            @Html.Label("Rap Performans 600₺", new { @class = "form-check-label" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.TicketId, 3, new { @class = "form-check-input", id = "flexRadioDefault2" })
                                            @Html.Label("Pop Performans 600₺", new { @class = "form-check-label" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12">
                                        <div class="form-check">
                                            @Html.RadioButtonFor(model => model.TicketId, 4, new { @class = "form-check-input", id = "flexRadioDefault2" })
                                            @Html.Label("Rock Performans 600₺", new { @class = "form-check-label" })
                                        </div>
                                    </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Number)
                                        @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", placeholder = "Bilet Adedi", required = "required" } })
                                        @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="form-control">Bileti Satın Alın </button>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </main>

</body>

</html>
